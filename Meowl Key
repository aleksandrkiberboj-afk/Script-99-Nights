            local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Meowl Scripter | 99 Nights in Forest",
   LoadingTitle = "Meowl Ultimate Hub",
   LoadingSubtitle = "by Meowl_2705 (Developer)",
   ConfigurationSaving = { Enabled = true, FolderName = "Meowl99Nights" },
   KeySystem = true,
   KeySettings = {
      Title = "Система Ключей",
      Subtitle = "Введите ключ доступа",
      Note = "Ключи: Meowl / Meowl20",
      FileName = "MeowlKey",
      SaveKey = true,
      Key = {"Meowl", "Meowl20"}
   }
})

-- [[ ПЕРЕМЕННЫЕ ]]
local lp = game.Players.LocalPlayer
_G.AutoChop = false
_G.KillAura = false
_G.GodMode = false
_G.FarmRange = 40
_G.KillRange = 25

-- [[ ВКЛАДКИ ]]
local MainTab = Window:CreateTab("Автоматизация", 4483362458)
local CombatTab = Window:CreateTab("Боевой режим", 4483362458)
local AdminTab = Window:CreateTab("Админ База", 4483362458)
local InfoTab = Window:CreateTab("Инфо", 4483362458)

-- [[ 1. АВТОМАТИЗАЦИЯ (С ТУМБЛЕРАМИ) ]]
MainTab:CreateSection("Настройки Фарма")

MainTab:CreateToggle({
   Name = "Авто-рубка деревьев",
   Info = "Автоматически ломает деревья в заданном радиусе",
   CurrentValue = false,
   Flag = "ToggleChop", 
   Callback = function(v) _G.AutoChop = v end,
})

MainTab:CreateToggle({
   Name = "Авто-сбор ресурсов",
   Info = "Притягивает лом и бревна к верстаку",
   CurrentValue = false,
   Flag = "ToggleScrap",
   Callback = function(v) _G.AutoScrap = v end,
})

MainTab:CreateSlider({
   Name = "Радиус взаимодействия",
   Info = "Дистанция работы тумблеров выше (1м - 1000м)",
   Range = {1, 1000},
   Increment = 1,
   CurrentValue = 40,
   Flag = "RangeSlider",
   Callback = function(v) _G.FarmRange = v end,
})

-- [[ 2. БОЕВОЙ РЕЖИМ ]]
CombatTab:CreateSection("Защита и Атака")

CombatTab:CreateToggle({
   Name = "Килл-Аура (Auto Attack)",
   Info = "Автоматически бьет всех животных в радиусе",
   CurrentValue = false,
   Flag = "ToggleAura",
   Callback = function(v) _G.KillAura = v end,
})

CombatTab:CreateToggle({
   Name = "Бессмертие (God Mode)",
   Info = "Блокирует уровень здоровья на максимуме",
   CurrentValue = false,
   Flag = "ToggleGod",
   Callback = function(v) _G.GodMode = v end,
})

-- [[ 3. АДМИН БАЗА ]]
AdminTab:CreateSection("Постройки (Sapling Abuse)")

AdminTab:CreateButton({
   Name = "Построить Админ-Столб",
   Info = "Создает бесконечную башню из саженцев вверх",
   Callback = function()
      local s = workspace.GameObjects.Resources.Trees:FindFirstChildOfClass("Model")
      if s then
         local p = lp.Character.HumanoidRootPart.Position
         for i = 1, 100 do
            local c = s:Clone()
            c.Parent = workspace
            c:PivotTo(CFrame.new(p + Vector3.new(0, i * 2.5, 0)))
            task.wait(0.01)
         end
      end
   end,
})

-- [[ 4. ИНФО О РАЗРАБОТЧИКЕ ]]
InfoTab:CreateSection("Данные разработчика")
InfoTab:CreateLabel("Ник: Meowl_2705")
InfoTab:CreateLabel("Статус: Developer / Девпловер")
InfoTab:CreateLabel("Версия: 1.4.0-beta (99 Nights Edition)")

-- [[ ВЕРТИКАЛЬНАЯ КНОПКА "Meowl :3" ]]
local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
local ToggleBtn = Instance.new("TextButton", ScreenGui)
Instance.new("UICorner", ToggleBtn).CornerRadius = UDim.new(0, 15)

ToggleBtn.Name = "MeowlSideButton"
ToggleBtn.Size = UDim2.new(0, 30, 0, 110)
ToggleBtn.Position = UDim2.new(1, -35, 0.4, 0)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
ToggleBtn.Text = "M\ne\no\nw\nl\n\n:\n3"
ToggleBtn.TextColor3 = Color3.fromRGB(0, 255, 120)
ToggleBtn.Font = Enum.Font.Code
ToggleBtn.TextSize = 14
ToggleBtn.Draggable = true

ToggleBtn.MouseButton1Click:Connect(function()
    local core = game:GetService("CoreGui"):FindFirstChild("Rayfield")
    if core then core.Enabled = not core.Enabled end
end)

