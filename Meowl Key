local WindUI = loadstring(game:HttpGet("https://tree-hub.vercel.app/api/UI/WindUI"))()

-- [[ ГЛАВНОЕ ОКНО ]]
local Window = WindUI:CreateWindow({
    Title = "Meowl Scripter | v1.4.0-beta",
    Icon = "rbxassetid://4483362458", -- Иконка лапки
    Author = "by Meowl",
    Folder = "MeowlWindConfigs"
})

-- [[ СИСТЕМА КЛЮЧЕЙ (Встроена в логику запуска) ]]
local function KeySystem()
    local KeyWindow = WindUI:CreateKeySystem({
        Title = "Key System",
        Keys = {"Meowl", "Meowl20"},
        OnSuccess = function()
            WindUI:Notify({Title = "Success", Content = "Access Granted! / Доступ разрешен", Type = "Success"})
        end
    })
end
KeySystem()

-- [[ ПЕРЕМЕННЫЕ ]]
local lp = game.Players.LocalPlayer
_G.AutoChop = false
_G.KillAura = false
_G.FarmDist = 40

-- [[ ВКЛАДКИ ]]
local MainTab = Window:CreateTab("Auto", "zap")
local CombatTab = Window:CreateTab("Combat", "sword")
local WorldTab = Window:CreateTab("World", "globe")

-- [[ РАЗДЕЛ AUTO (Стиль Gec Hub) ]]
MainTab:CreateSection("Automation / Автоматизация")

MainTab:CreateToggle({
    Title = "Auto Scrap",
    Desc = "Automatically brings Scrap Items to the workbench",
    Value = false,
    Callback = function(v) _G.AutoScrap = v end
})

MainTab:CreateToggle({
    Title = "Auto Log",
    Desc = "Automatically brings logs to the workbench",
    Value = false,
    Callback = function(v) _G.AutoLog = v end
})

MainTab:CreateSlider({
    Title = "Radius",
    Desc = "Radius from 1 to 1000 meters",
    Min = 1,
    Max = 1000,
    Default = 40,
    Callback = function(v) _G.FarmDist = v end
})

MainTab:CreateToggle({
    Title = "Auto Base",
    Desc = "Plants saplings in circles exactly where you left off",
    Value = false,
    Callback = function(v) _G.AutoBase = v end
})

-- [[ РАЗДЕЛ COMBAT ]]
CombatTab:CreateSection("Protection")

CombatTab:CreateToggle({
    Title = "Kill Aura",
    Desc = "Automatically attacks animals in range",
    Value = false,
    Callback = function(v) _G.KillAura = v end
})

CombatTab:CreateToggle({
    Title = "God Mode",
    Desc = "Infinite health for 99 Nights",
    Value = false,
    Callback = function(v) _G.GodMode = v end
})

-- [[ РАЗДЕЛ WORLD (Shapes & Admin Base) ]]
WorldTab:CreateSection("Admin Structures")

WorldTab:CreateButton({
    Title = "Tree Base (Sapling Abuse)",
    Desc = "Build infinite pillar upwards",
    Callback = function()
        -- Логика постройки столба (как в прошлых версиях)
    end
})

WorldTab:CreateButton({
    Title = "Auto Stronghold",
    Desc = "Build protective ring around you",
    Callback = function()
        -- Логика кольца
    end
})

-- [[ ВЕРТИКАЛЬНАЯ КНОПКА Meowl :3 (ПОД WINDUI) ]]
local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
local ToggleBtn = Instance.new("TextButton", ScreenGui)
Instance.new("UICorner", ToggleBtn).CornerRadius = UDim.new(0, 15)

ToggleBtn.Name = "MeowlWindButton"
ToggleBtn.Size = UDim2.new(0, 30, 0, 110)
ToggleBtn.Position = UDim2.new(1, -35, 0.4, 0)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
ToggleBtn.Text = "M\ne\no\nw\nl\n\n:\n3"
ToggleBtn.TextColor3 = Color3.fromRGB(0, 255, 100) -- Тот самый Gec-зеленый
ToggleBtn.Font = Enum.Font.Code
ToggleBtn.TextSize = 14
ToggleBtn.Draggable = true

ToggleBtn.MouseButton1Click:Connect(function()
    Window:Toggle() -- WindUI метод скрытия
end)

